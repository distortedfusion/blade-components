{
    "name": "distortedfusion/blade-components",
    "description": "A collection of reusable Blade components implementing TailwindCSS.",
    "license": "proprietary",
    "keywords": ["laravel", "tailwind", "blade", "components", "distortedfusion"],
    "authors": [
        {
            "name": "Kevin Dierkx",
            "email": "kevin@distortedfusion.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://distortedfusion.muse.distortedfusion.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^7.0|^8.0|^9.0|^10.0|^11.0",
        "distortedfusion/blade-colors": "^1.0.0",
        "distortedfusion/blade-forms": "^2.0.0",
        "distortedfusion/fontawesome-pro-icons-light": "^6.4"
    },
    "require-dev": {
        "distortedfusion/php-cs-fixer-config": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "DistortedFusion\\BladeComponents\\": "src/"
        }
    },
    "scripts": {
        "phpcs-fix" : "php-cs-fixer fix --using-cache=no --allow-risky=yes --ansi",
        "phpcs": "php-cs-fixer fix -v --diff --dry-run --allow-risky=yes --ansi",
        "test": [
            "@phpcs"
        ]
    },
    "scripts-descriptions": {
        "phpcs": "Runs coding style test suite",
        "test": "Runs all tests"
    },
    "extra": {
        "laravel": {
            "providers": [
                "DistortedFusion\\BladeComponents\\LayoutServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
